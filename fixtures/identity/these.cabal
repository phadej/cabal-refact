  main-is:             Tests.hs
  hs-source-dirs:      test
  ghc-options:         -Wall
  build-depends:       these,
                       base                    >= 4.5,
                       quickcheck-instances    >= 0.3.6 && < 0.3.13,
                       tasty                   >= 0.10  && < 0.12,
                       tasty-quickcheck        >= 0.8   && < 0.9,
                       aeson,
                       bifunctors,
                       binary,
                       containers,
                       hashable,
                       QuickCheck,
                       transformers,
                       unordered-containers,
                       vector
